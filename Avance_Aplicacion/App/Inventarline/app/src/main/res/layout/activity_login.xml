<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.moviles.jlpsoft.inventarline.LoginActivity"
    android:background="@drawable/wallpaperprincipal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Usuario          "
        android:textStyle="bold"
        android:id="@+id/lblUser"
        android:layout_above="@+id/lblPassword"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ContraseÃ±a   "
        android:textStyle="bold"
        android:id="@+id/lblPassword"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUser"
        android:layout_alignBottom="@+id/lblUser"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/lblPassword"
        android:textColor="#000000"
        android:background="@drawable/text_area_customize"
        android:layout_alignTop="@+id/lblUser" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_alignEnd="@+id/txtUser"
        android:layout_toEndOf="@+id/lblPassword"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/lblPassword"
        android:layout_below="@+id/lblUser"
        android:background="@drawable/text_area_customize" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceder"
        android:id="@+id/btLogin"
        android:layout_marginTop="38dp"
        android:background="@drawable/button_customize"
        android:textColor="#000000"
        android:layout_below="@+id/txtPassword"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
