<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.julioleonardo.inventarline.Login"
    android:background="@drawable/wallpaperprincipal"
    android:focusable="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Agregar Producto  "
        android:id="@+id/btAdd"
        android:layout_marginBottom="69dp"
        android:layout_above="@+id/btListing"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_customize"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Modificar Producto  "
        android:id="@+id/btModify"
        android:layout_alignBottom="@+id/btAdd"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_customize"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar Producto"
        android:id="@+id/btListing"
        android:layout_alignBaseline="@+id/btDelete"
        android:layout_alignBottom="@+id/btDelete"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btAdd"
        android:background="@drawable/button_customize"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Producto"
        android:id="@+id/btDelete"
        android:layout_marginBottom="71dp"
        android:layout_above="@+id/btReport"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_customize"
        android:layout_alignStart="@+id/btModify"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Generar Informe  "
        android:id="@+id/btReport"
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_customize"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OPCIONES DEL SISTEMA"
        android:textStyle="italic"
        android:id="@+id/lblOptions"
        android:textAlignment="center"
        android:layout_above="@+id/btAdd"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp"
        android:layout_alignEnd="@+id/btDelete"
        android:textColor="#ffffff"
        android:textSize="30sp" />
</RelativeLayout>